@model BicycleStore.Models.bicycle

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="row mt-3">
        <div class="col mt-5">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title mb-4 d-inline fw-bold">Edit Bicycle Info</h3>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="id" />
                                <div class="form-group">
                                    <label asp-for="Type" class="control-label"></label>
                                    <select class="select" asp-for="Type" required>
                                        <option value="with basket">with basket</option>
                                        <option value="with seat">with seat</option>
                                        <option value="with basket and seat">with basket and seat</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label"></label>
                                    <select class="select" asp-for="Status" required>
                                        <option value="0">0 - Unavailable</option>
                                        <option value="1">1 - Available</option>
                                    </select>                                    
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary mt-5" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="mt-2 mb-5">
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}